<Window x:Class="menu.EditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:menu"
        mc:Ignorable="d"
        Title="EditDialog" Height="300" Width="300">
    <StackPanel>
        <TextBox x:Name="idEdit" Margin="5" Grid.Column="1"  Grid.Row="2"></TextBox>
        <TextBox Name="CodeNameBoxEDIT" Margin="5" Grid.Column="1" Grid.Row="3" ></TextBox>
        <ComboBox Name="SpecialityBoxEDIT" Margin="5" Grid.Column="1" Grid.Row="4" >
            <ComboBoxItem>Assasination</ComboBoxItem>
            <ComboBoxItem>Idling</ComboBoxItem>
            <ComboBoxItem>A shoulder to cry on</ComboBoxItem>
        </ComboBox>
        <TextBox Name="AssignmentBoxEDIT" AcceptsReturn="True" Margin="5" Grid.Column="1" Grid.Row="5"></TextBox>
        <Button Content="OK" Click="ButtonBase_OnClick"></Button>
    </StackPanel>
</Window>
