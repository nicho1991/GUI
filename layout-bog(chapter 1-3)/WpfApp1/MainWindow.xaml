<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Width="300" Height="200" >
    <Border Margin="5" BorderThickness="5" BorderBrush="SteelBlue" CornerRadius="10">
        <StackPanel Margin="5" >
            <Label Margin="5" HorizontalAlignment="Center">A Button Stack</Label>
            <Button HorizontalAlignment="Center" Margin="5">Button 1</Button>
            <Button HorizontalAlignment="Center" Margin="5">Button 2</Button>
            <Button Margin="5" HorizontalAlignment="Center">Button 3</Button>
            <Button HorizontalContentAlignment="Center" Margin="5" HorizontalAlignment="Center">Button 4</Button>
        </StackPanel>
    </Border>
</Window>
        
        
        
        


